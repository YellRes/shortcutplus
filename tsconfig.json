{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "paths": {
      "package/*": ["package/*"], 
      "main/*": ["package/main/*"],
      "preload/*": ["package/preload/*"],
      "asset/*": ["asset/*"]
    },
    "baseUrl": "./"
  },
  "ts-node": {
    "esm": true
  },
  "include": ["./scripts/*.ts", "./scripts/*.d.ts", "package/**/*.ts", "package/**/*.d.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
